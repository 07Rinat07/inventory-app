{% extends 'base.html.twig' %}

{% block title %}
    Items — {{ inventory.title }}
{% endblock %}

{% block body %}
    <h1 class="mb-3">
        Items — {{ inventory.title }}
    </h1>

    <p class="mb-4">
        <a href="{{ path('inventories_show', {id: inventory.id}) }}" class="link-secondary">
            ← Back to inventory
        </a>
    </p>

    {# ===== Permissions line (не светофор, нейтрально) ===== #}
    <div class="mb-4">
        <span class="text-muted">Your permissions:</span>

        {% if is_granted('INVENTORY_VIEW', inventory) %}
            <span class="badge text-bg-light border">VIEW</span>
        {% endif %}

        {% if is_granted('INVENTORY_EDIT', inventory) %}
            <span class="badge text-bg-light border">EDIT</span>
        {% endif %}

        {% if is_granted('INVENTORY_CREATE_ITEM', inventory) %}
            <span class="badge text-bg-light border">CREATE ITEM</span>
        {% endif %}

        {% if is_granted('INVENTORY_EDIT_ITEM', inventory) %}
            <span class="badge text-bg-light border">EDIT ITEM</span>
        {% endif %}
    </div>

    {# ===== Create form (показываем только если разрешено) ===== #}
    {% if is_granted('INVENTORY_CREATE_ITEM', inventory) %}
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Create new item</h5>

                {{ form_start(form) }}
                <div class="row g-2 align-items-end">
                    <div class="col-md-6">
                        {{ form_row(form.customId) }}
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-outline-dark w-100">
                            Create
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
        <div class="alert alert-light border mb-4">
            You don’t have permission to create items in this inventory.
        </div>
    {% endif %}

    {# ===== Items table ===== #}
    <h2 class="h4 mb-3">Items</h2>

    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
            <tr>
                <th style="width: 80px;">ID</th>
                <th>Custom ID</th>
                <th>Created by</th>
                <th style="width: 220px;" class="text-end">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.customId }}</td>
                    <td>{{ item.createdBy.email }}</td>

                    <td class="text-end">
                        {# Edit button (серый) #}
                        {% if is_granted('INVENTORY_EDIT_ITEM', inventory) %}
                            <a
                                    href="{{ path('inventory_item_edit', { id: inventory.id, itemId: item.id }) }}"
                                    class="btn btn-sm btn-outline-secondary"
                            >
                                Edit
                            </a>
                        {% else %}
                            <span class="text-muted small">—</span>
                        {% endif %}

                        {# Delete button (серый) + CSRF #}
                        {% if is_granted('INVENTORY_EDIT_ITEM', inventory) %}
                            <form
                                    method="post"
                                    action="{{ path('inventory_item_delete', { id: inventory.id, itemId: item.id }) }}"
                                    class="d-inline"
                                    onsubmit="return confirm('Delete this item?');"
                            >
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_item_' ~ item.id) }}">

                                <button class="btn btn-sm btn-outline-dark ms-1">
                                    Delete
                                </button>
                            </form>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        No items yet
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
