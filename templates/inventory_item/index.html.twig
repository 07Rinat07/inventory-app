{% extends 'base.html.twig' %}

{% block title %}Items — {{ inventory.title }}{% endblock %}

{% block body %}
    <h1 class="mb-4">Items — {{ inventory.title }}</h1>

    <div class="card mb-4">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.customId) }}
            <button class="btn btn-outline-secondary btn-sm">Create</button>
            {{ form_end(form) }}
        </div>
    </div>

    <table class="table table-sm table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Custom ID</th>
            <th>Created by</th>
            <th class="text-end">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.customId }}</td>
                <td>{{ item.createdBy.email }}</td>
                <td class="text-end">
                    {% if is_granted('INVENTORY_EDIT_ITEM', inventory) %}
                        <a
                                href="{{ path('inventory_item_edit', { id: inventory.id, itemId: item.id }) }}"
                                class="btn btn-sm btn-outline-secondary"
                        >
                            Edit
                        </a>

                        <form
                                method="post"
                                action="{{ path('inventory_item_delete', { id: inventory.id, itemId: item.id }) }}"
                                class="d-inline"
                                onsubmit="return confirm('Delete item?');"
                        >
                            <button class="btn btn-sm btn-outline-dark">
                                Delete
                            </button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-muted text-center">No items</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a
            href="{{ path('inventories_show', { id: inventory.id }) }}"
            class="btn btn-outline-secondary btn-sm mt-3"
    >
        Back to inventory
    </a>
{% endblock %}
