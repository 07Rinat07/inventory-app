{% extends 'base.html.twig' %}

{% block title %}Inventories{% endblock %}

{% block body %}
    <h1 class="mb-3">Inventories</h1>

    <div class="alert alert-secondary">
        <strong>Note:</strong> UI is intentionally minimal. ACL is enforced by voters/controllers.
        This table shows a quick access hint (Owner/Admin/Viewer).
    </div>

    <table class="table table-bordered table-sm align-middle">
        <thead class="table-light">
        <tr>
            <th style="width: 80px;">ID</th>
            <th>Title</th>
            <th style="width: 160px;">Category</th>
            <th style="width: 260px;">Owner</th>
            <th style="width: 160px;">Access</th>
        </tr>
        </thead>

        <tbody>
        {% for inventory in inventories %}
            {# =========================================
               Определяем "видимый" уровень доступа в UI
               ========================================= #}
            {% set isAdmin = is_granted('ROLE_ADMIN') %}
            {% set isOwner = app.user and inventory.owner and (inventory.owner.id == app.user.id) %}

            {# ВАЖНО: тут не “правило доступа”, а только подсказка.
               Реальный доступ всё равно проверяется в Controller/Voter. #}
            {% if isAdmin %}
                {% set accessLabel = 'ADMIN' %}
                {% set accessClass = 'bg-danger' %}
            {% elseif isOwner %}
                {% set accessLabel = 'OWNER' %}
                {% set accessClass = 'bg-success' %}
            {% else %}
                {% set accessLabel = 'VIEWER' %}
                {% set accessClass = 'bg-secondary' %}
            {% endif %}

            <tr>
                <td>{{ inventory.id }}</td>
                <td>
                    <a href="{{ path('inventories_show', {id: inventory.id}) }}">
                        {{ inventory.title }}
                    </a>
                </td>
                <td>{{ inventory.category }}</td>
                <td>{{ inventory.owner.email }}</td>
                <td>
                    <span class="badge {{ accessClass }}">{{ accessLabel }}</span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-muted">No inventories found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
