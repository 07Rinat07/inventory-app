{% extends 'base.html.twig' %}

{% block title %}Inventories{% endblock %}

{% block body %}
    <h1>Inventories</h1>

    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Owner</th>
        </tr>
        </thead>
        <tbody>
        {% for inventory in inventories %}
            <tr>
                <td>{{ inventory.id }}</td>
                <td>
                    <a href="{{ path('inventories_show', {id: inventory.id}) }}">
                        {{ inventory.title }}
                    </a>
                </td>
                <td>{{ inventory.category }}</td>
                <td>{{ inventory.owner.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No inventories found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
